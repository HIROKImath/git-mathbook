      <% end %>
      </ul>
    </div>
  <% end %>

  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>

<!--左部分-->
     <%= render 'books/left', book: @book ,user: @user %>


