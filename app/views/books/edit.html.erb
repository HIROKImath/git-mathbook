<!--Bootstrap部分  -->
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Editing Book</h1>

  <%= form_with model: @book, local:true do |f| %>
    <div class="form-group">
      <%=f.label :title,"Title"%>
      <%= f.text_field :title,class:"form-control" %>
    </div>

    <div class="form-group">
      <%=f.label :author,"Author"%>
      <%= f.text_field :author,class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :page%>
      <%= f.number_field :page,class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :chapter%>
      <%= f.number_field :chapter,class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :section%>
      <%= f.number_field :section,class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :isbn%>
      <%= f.text_field :isbn,class:"form-control"%>
    </div>


    <div class="form-group">
      <%=f.label :body_question,"Question"%>
      <%= f.text_area :body_question,class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :body_answer,"Opinion"%>
      <%= f.text_area :body_answer,class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update Book',class: "btn btn-success" %>
    </div>
  <% end %>

  <%= link_to 'Show', book_path(@book.id) %><%= " | "%><%= link_to "Back", "/books" %>

<!--Bootstrap部分  -->
  </div>
 </div>
</div>