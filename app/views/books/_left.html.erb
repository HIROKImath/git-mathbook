

      <div class='col-md-3'>
       <h2>User info</h2>

       <!--https://getbootstrap.jp/docs/4.5/content/tables/#always-responsive-->
       <!--<div class="table-responsive">-->
          <table class='table table-hover table-inverse'>
            <tr>
              <%= attachment_image_tag user, :profile_image, :fit, 60, 60, fallback: "default-image.jpg"  %>
            </tr>
            <tr>
              <th>name</th>
              <th class="text-break"><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th class="text-break"><%= user.introduction %></th>
            </tr>
          </table>
        <!--</div>-->

        <!--@user→user-->
        <div class='row'>
          <%= link_to edit_user_path(user.id) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>


        <!--ref:Lesson4,Chapter 4 投稿機能を作ろう-->
        <!--/booksコントローラーのcreateアクションへPOSTしたいから、form withにURLオプションを設定する。-->
        <!--https://pikawaka.com/rails/form_with-->
        <%= form_with model: book, url:'/books', local:true do |f| %>
          <div class="form-group">
            <%=f.label :title,"Title"%>
            <%= f.text_field :title, class:"form-control"%>
          </div>
          <div class="form-group">
            <%=f.label :body_question,"Question"%>
            <%= f.text_area :body_question,class:"form-control"%>
          </div>
          <div class="form-group">
            <%=f.label :body_answer,"Answer"%>
            <%= f.text_area :body_answer,class:"form-control"%>
          </div>
          <div class="form-group">
            <%=f.label :author,"Author"%>
            <%= f.text_field :author,class:"form-control"%>
          </div>
          <div class="form-group">
            <%=f.label :page%>
            <%= f.text_field :page,class:"form-control"%>
          </div>


            <%= f.submit 'Create Book',class: "btn btn-success" %>
        <% end %>
      </div>