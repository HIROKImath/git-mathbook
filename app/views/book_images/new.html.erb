    <h2>User info</h2>

      <%= form_with model:@bookimage,url:book_book_images_path,local:true do |f| %>


        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :book_image_main, class:"form-control-file", id:"inputImage" %>
        </div>


        <div class="form-group">
          <%= f.submit "Update User" ,class:"btn btn-secondary" %>
        </div>

      <% end %>