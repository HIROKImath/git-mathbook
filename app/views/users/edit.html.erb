<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>


      <h2>User info</h2>

      <%= form_with model:@user,local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, type:"text", class:"form-control",id:"inputName"%>
        </div>

        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, class:"form-control-file", id:"inputImage" %>
        </div>

        <div class="form-group">
          <label for="inputIntro">introduction</label>
          <%= f.text_area :introduction,class:"form-control",id:"inputIntro"%>
        </div>

        <div class="form-group">
          <%= f.submit "Update User" ,class:"btn btn-secondary" %>
        </div>

      <% end %>
   </div>
  </div>
</div>

<!--label for でテキストボックスのidをつければ、ラベルクリックすれば、同じidを設定したテキストボックスも光る-->
