<!--全体-->
<main>

  <div class='container px-5 px-sm-0'>
    <div class='row'>

<!--ユーザーが投稿したbookのリスト-->
    <div class='col-md-8 offset-md-1'>
      <h2>Which book ?  you wanna create article.</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Autor</th>
            <th>ISBN</th>
            <th>Body</th>
            <th>Select Link</th>
          </tr>
        </thead>

        <% @user_books.each do |book| %>
        <tbody>
          <tr>
            <td class="text-break">
              <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fit, 100, 100, fallback: "default-image.jpg" %>
                  <br/>
                  <%= book.user.name %>
              <% end %>
            </td>
            <td class="text-break">
              <%= link_to book_path(book) do %>
                  <%= attachment_image_tag book, :book_image, :fit, 100, 100, fallback: "default-image.jpg" %>
                  <br/>
                  <%= book.title %>
              <% end %>
            </td>
            <td class="text-break"><%= book.author %></td>
            <td class="text-break"><%= book.isbn %></td>
            <td class="text-break"><%= book.body %></td>
            <% if current_user.present? %>
              <% if @user.id == current_user.id %>
                <td><%= link_to 'Create New Article', new_book_book_article_path(book) %></td>
              <% end %>
            <% end %>

          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

<!--全体-->
    </div>

    <div class='row'>
      <%= link_to 'Show User Info', user_path(@user.id), class: "btn btn-success" %>
    </div>
  </div>
</main>