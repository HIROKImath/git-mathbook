<!--全体-->
<main>

  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>

<!--左部分-->
     <%= render 'books/left', book: @book ,user: @user %>


<!--右部分 -->
<!--ユーザーが投稿したbookのリスト-->
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fit, 60, 60, fallback: "default-image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>


<!--全体-->
    </div>
  </div>
</main>