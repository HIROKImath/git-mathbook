<!--全体-->
<main>

  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>introduction</th>
            <th><%= 'User&rsquo;s Books Link'.html_safe %></th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fit, 60, 60, fallback: "default-image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <td><%= link_to 'Show User&rsquo;s Books'.html_safe, show_userbooks_path(user) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>


<!--全体-->
    </div>
  </div>
</main>